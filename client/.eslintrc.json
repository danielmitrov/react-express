{
  "root": true,
  "rules": {
    "indent": ["error", 4],
    "react/jsx-indent" : ["error", 4],
    "import/order": ["error",
      {
        "groups": [
          ["builtin", "external"]
        ],
        "newlines-between": "always"
      }
    ],
    "react/jsx-one-expression-per-line": "off",
    "import/newline-after-import": ["error", { "count": 2 }]
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "airbnb",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "API_URL": "readonly"
  },
  "plugins": [
    "react"
  ]
}