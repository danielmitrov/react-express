{
    "compilerOptions": {
      "module": "commonjs",
      "baseUrl": "./",
      "outDir": "dist",
      "removeComments": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "target": "es6",
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ],
    },
    "include": [
      "./src/**/*.ts",
      "./src/types/declarations.d.ts"
    ],
    "exclude": [
      "./src/dist/"
    ]
}
